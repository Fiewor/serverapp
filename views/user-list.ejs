<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>Users</title>
</head>
<body>
    <h1>Users</h1>
    <div class="table-data">
        <!-- <table border="1"> -->
        <table>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email address</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <%
                if(userData.length!=0){
                    let i=1;
                    userData.forEach(function(data){
            %>
            <tr>
                <td><%=i; %></td>
                <td><%=data.firstName %></td>
                <td><%=data.lastName%></td>
                <td><%=data.emailAddress%></td>
                <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
                <td><a href="/users/delete/<%=data.id%>">Delete</a></td>
            </tr>
            <% i++; }) %>
            <% } else{ %>
                <tr>
                    <td colspan="7">No Data Found</td>
                </tr>
            <% } %>
        </table>
    </div>
</body>
</html>
